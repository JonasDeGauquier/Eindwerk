<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="myMenuBar" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
  <menus>
    <Menu mnemonicParsing="false" text="Bewoners">
      <items>
        <MenuItem fx:id="ShowAllBewoners" mnemonicParsing="false" onAction="#switchToAllBewoners" text="Toon bewoners" />
            <MenuItem fx:id="AddBewoner" mnemonicParsing="false" onAction="#switchToAddBewoner" text="Bewoner toevoegen" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Zorgplan">
      <items>
            <MenuItem fx:id="ShowZorgplan" mnemonicParsing="false" onAction="#switchToZorgplan" text="Zorgplan" />
        <MenuItem fx:id="AddZorgtaak" mnemonicParsing="false" onAction="#switchToAddZorgtaak" text="Zorgtaak toevoegen" />
      </items>
    </Menu>
      <Menu mnemonicParsing="false" text="Personeel">
        <items>
          <MenuItem fx:id="Personeel" mnemonicParsing="false" text="Personeel" onAction="#switchToPersonneel" />
          <MenuItem fx:id="AddPersoneel" mnemonicParsing="false" text="Personeel toevoegen" onAction="#AddPersoneel" />
        </items>
      </Menu>
    <Menu mnemonicParsing="false" text="Uitloggen">
      <items>
        <MenuItem fx:id="LogOut" mnemonicParsing="false" onAction="#logOut" text="Log uit" />
      </items>
    </Menu>
  </menus>
</MenuBar>
